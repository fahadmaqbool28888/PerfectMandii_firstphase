<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nau"
    tools:context=".ProductProfileActivity"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toolset"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="52dp"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/backbutton"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/toolset"
                    app:layout_constraintBottom_toBottomOf="@id/toolset"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Continue Shopping"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/opv2"
                    app:layout_constraintLeft_toRightOf="@id/backbutton"/>

                <ImageView
                    android:id="@+id/bucket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


                <ImageView
                    android:layout_marginRight="@dimen/google_1x"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/bucket"
                    android:id="@+id/activfav"
                    android:src="@drawable/inactive_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/maincontainer23"
                app:layout_constraintTop_toBottomOf="@id/toolset">


                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"


                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/ItemCe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/ivFish"
                                android:layout_width="135dp"
                                android:layout_height="135dp"
                                android:padding="@dimen/google_1x"
                                android:src="@drawable/profile"


                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />




                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/ppname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Item Name"
                                    android:textColor="#000000"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/ppdesc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="3"
                                    android:text="@string/exampledata"

                                    android:textColor="@color/opv1"
                                    android:textSize="12dp"
                                    />

                                <TextView
                                    android:id="@+id/ppric"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="2"
                                    android:text="100 PKR"
                                    android:textColor="#013747"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/add_up"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_baseline_add_24"/>
                                    <EditText
                                        android:enabled="false"
                                        android:id="@+id/value_cart"
                                        android:layout_width="52dp"
                                        android:inputType="number"
                                        android:textAlignment="center"
                                        android:background="@null"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="22dp"
                                        android:textStyle="bold"/>
                                    <ImageView
                                        android:id="@+id/minus_up"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_baseline_remove_24"/>

                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/add_but"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="calculate"
                                        android:textAllCaps="true"
                                        android:padding="5dp"
                                        android:textSize="10dp"
                                        android:textColor="@color/whiteTextColor"
                                        android:background="@color/opv1"/>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/paymentsetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp"
                app:layout_constraintTop_toBottomOf="@id/maincontainer23"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/stotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    app:layout_constraintTop_toBottomOf="@id/maincontainer23">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="@id/stotal"
                        app:layout_constraintTop_toTopOf="@id/stotal"
                        />

                    <TextView

                        android:id="@+id/subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs :100"

                        android:textColor="@color/opv2"
                        android:textSize="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/stotal"
                        app:layout_constraintTop_toTopOf="@id/stotal" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/stotal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Charges"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="@id/dtotal"
                        app:layout_constraintTop_toTopOf="@id/dtotal"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs :0"

                        android:textColor="@color/opv2"
                        app:layout_constraintEnd_toEndOf="@id/dtotal"
                        app:layout_constraintTop_toTopOf="@id/dtotal"
                        android:textSize="15dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ttotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/dtotal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="@id/ttotal"
                        app:layout_constraintTop_toTopOf="@id/ttotal"
                        />
                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs :100"

                        android:textColor="@color/opv2"
                        app:layout_constraintEnd_toEndOf="@id/ttotal"
                        app:layout_constraintTop_toTopOf="@id/ttotal"
                        android:textSize="15dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/storeitem"
                app:layout_constraintTop_toBottomOf="@id/paymentsetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/releated_Store_item"
                    app:layout_constraintTop_toTopOf="@id/storeitem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



            <!--      <Button
                      android:id="@+id/addbuttom"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@color/colorPrimary"
                      android:padding="1dp"
                      android:text="Add to cart"
                      android:textColor="#ffffff"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      tools:layout_editor_absoluteY="251dp" />

                  <Button
                      android:id="@+id/contshopping"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@color/colorPrimary"
                      android:text="Continue Shopping"

                      android:textColor="#ffffff"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toEndOf="@id/addbuttom"
                      tools:layout_editor_absoluteY="251dp" />-->





        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ptco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:padding="15dp"

        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/atc"
        android:layout_marginBottom="15dp"

        app:layout_constraintBottom_toBottomOf="@id/nau">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/opv1"
            android:textSize="15dp"
            android:padding="10dp"


            android:background="@color/opv2"
            android:text="Proceed to Check out "/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/atc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="@id/nau"
        android:foregroundGravity="center"



        app:layout_constraintBottom_toBottomOf="@id/nau">
        <TextView
            android:id="@+id/atcte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/opv1"
            android:textSize="15dp"
            android:padding="10dp"


            android:background="@color/opv2"
            android:text="Add to Cart"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>