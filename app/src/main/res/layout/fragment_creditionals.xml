<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_store"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:background="@color/opv2"
                android:text="Create Creditionals Details"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="#A1887F"
                android:text="Your Name"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/customer_name"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:padding="10dp"

                    android:hint="Enter Name here"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:padding="10dp"
                android:textColor="#A1887F"
                android:id="@+id/taskdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"

                android:textStyle="bold"
                android:textSize="18dp"


                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:hint="Mobile Number / Login"
                    android:id="@+id/customer_phone"
                    android:lines="1"
                    android:maxLength="11"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:padding="10dp"
                    android:inputType="phone"


                    />

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp"
                android:textColor="#A1887F"
                android:text="Enter Pin"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.poovam.pinedittextfield.CirclePinField
                    android:id="@+id/pin_customer"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:inputType="numberPassword"
                    app:noOfFields="4"

                    android:textSelectHandle="@drawable/text_handle"
                    app:highlightColor="@color/opv2"
                    app:circleRadius="15dp"
                    app:fillerRadius="15dp"
                    app:fillerColor="@color/opv1"
                    app:fieldBgColor="@color/whiteTextColor"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp"
                android:textColor="#A1887F"
                android:text="Confirm Pin"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.poovam.pinedittextfield.CirclePinField


                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:inputType="numberPassword"
                    app:noOfFields="4"

                    android:textSelectHandle="@drawable/text_handle"
                    app:highlightColor="@color/opv2"
                    app:circleRadius="15dp"
                    app:fillerRadius="15dp"
                    app:fillerColor="@color/opv1"
                    app:fieldBgColor="@color/whiteTextColor"
                    android:id="@+id/pin_confirm"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText

                    android:id="@+id/customer_otp"
                    android:lines="1"
                    android:maxLength="4"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:padding="15dp"
                    android:inputType="phone"
                    android:layout_gravity="center_horizontal"
                    android:hint="Enter OTP"


                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/next_12"
                    app:cardBackgroundColor="@color/opv1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/next_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:padding="10dp"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Next"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
        <!-- TODO: Update blank fragment layout -->


    </ScrollView>
</FrameLayout>