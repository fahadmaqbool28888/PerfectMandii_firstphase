<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/opv2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/backspace"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="@dimen/google_1x"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_baseline_keyboard_backspace_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:padding="10dp"
                    android:textColor="@color/opv1"

                    android:text="Product Information"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:padding="10dp"

                        android:textStyle="bold"
                        android:text="Serial ID"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_margin="2dp"
                        android:layout_height="wrap_content">

                        <EditText

                            android:editable="false"
                            android:id="@+id/serial_id_PI"
                            android:text="@android:string/cancel"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:padding="10dp"

                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:padding="10dp"

                        android:textStyle="bold"
                        android:text="SKU"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp">
                        <EditText
                            android:labelFor="@id/sku_PI"
                            android:editable="false"
                            android:id="@+id/sku_PI"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                          android:padding="10dp"
                            android:hint="SKU is system generated"

                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="Account ID"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp">
                        <EditText
                            android:editable="false"
                            android:id="@+id/accountid_PI"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:padding="10dp"
                            android:hint="system generated"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/category_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_margin="@dimen/google_1x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_weight="2"
                       android:backgroundTint="#DEC19b"
                       android:layout_gravity="center"
                       app:cardCornerRadius="@dimen/google_1x"
                       android:layout_height="wrap_content">
                       <Spinner
                            android:padding="@dimen/google_1x"
                           android:layout_gravity="center"

                           android:id="@+id/category_spinner"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />
                   </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/google_1x">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:backgroundTint="#DEC19b"
                        android:layout_gravity="center"
                        app:cardCornerRadius="@dimen/google_1x"
                        android:layout_height="wrap_content">
                    <Spinner
                        android:padding="@dimen/google_1x"
                        android:layout_gravity="center"
                        android:id="@+id/scategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/google_1x">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:backgroundTint="#DEC19b"
                        android:layout_gravity="center"
                        app:cardCornerRadius="@dimen/google_1x"
                        android:layout_height="wrap_content">
                    <Spinner
                        android:padding="@dimen/google_1x"
                        android:layout_gravity="center"
                        android:id="@+id/sccategory"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/google_1x">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:backgroundTint="#DEC19b"
                        android:layout_gravity="center"
                        app:cardCornerRadius="@dimen/google_1x"
                        android:layout_height="wrap_content">
                    <Spinner
                        android:padding="@dimen/google_1x"
                        android:id="@+id/meausrecategory"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/google_1x">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:backgroundTint="#DEC19b"
                        android:layout_gravity="center"
                        app:cardCornerRadius="@dimen/google_1x"
                        android:layout_height="wrap_content">
                    <Spinner
                        android:padding="@dimen/google_1x"
                        android:id="@+id/colorcategory"
                        android:autofillHints="Select Color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Name"
                    android:textColor="#A1887F"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/product_name"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:padding="10dp"
                    android:hint="Enter Product Name"

                    />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="Description"
                    android:textColor="#A1887F"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/product_description"
                        android:background="@null"
                        android:lines="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:padding="10dp"
                        android:hint="Enter Product Description"
                        />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Unit Quantity"
                            android:textColor="#A1887F"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/unit_quantity"
                                android:background="@null"
                                android:inputType="number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:padding="10dp"
                                android:hint="Enter unit Quantity"
                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:text="Unit Price"
                            android:textColor="#A1887F"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/unit_price"
                                android:background="@null"
                                android:inputType="number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:padding="10dp"
                                android:hint="Enter unit price"
                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/avg_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Average Weight"
                        android:textColor="#A1887F"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/product_avgweight"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:padding="10dp"
                            android:inputType="numberDecimal"
                            android:hint="Enter Product Name"

                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attachment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="#A1887F"
                    android:text="Upload Product Pic*"
                    />
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/icon_c"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/product_pic"
                                app:layout_constraintTop_toTopOf="@id/icon_c"
                                app:layout_constraintStart_toStartOf="@id/icon_c"
                                app:layout_constraintEnd_toEndOf="@id/icon_c"
                                app:layout_constraintBottom_toBottomOf="@id/icon_c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/uploadicon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upload "
                                android:textSize="12dp"
                                app:layout_constraintStart_toStartOf="@id/icon_c"
                                app:layout_constraintEnd_toEndOf="@id/icon_c"
                                app:layout_constraintTop_toBottomOf="@+id/product_pic"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="5dp"
                        android:layout_height="5dp"/>
                </LinearLayout>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#A1887F"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/next_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:padding="15dp"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Add Item"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
        <!-- TODO: Update blank fragment layout -->


    </ScrollView>
