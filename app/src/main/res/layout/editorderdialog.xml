<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="300dp"
    android:minHeight="400dp"
    app:cardCornerRadius="26dp"
    app:cardBackgroundColor="#1B013747"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/head_Alert"
            android:orientation="horizontal"
            android:background="@color/opv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/google_1x"
                android:textColor="@color/whiteTextColor"
                android:gravity="center"
                android:text="Edit Product Detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

<ImageView

    app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@id/head_Alert"
    android:id="@+id/image_dialog"
    android:layout_width="100dp"
    android:layout_height="100dp"/>

        <TextView
            android:id="@+id/Product_Detail_dialog"
          app:layout_constraintTop_toBottomOf="@id/image_dialog"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/opv2"
            android:textSize="18dp"
            android:padding="16dp"
            android:text="Product Name"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_margin="@dimen/google_1x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/Product_Detail_dialog">

            <TextView
                android:padding="2dp"
                android:textColor="@color/opv2"
                android:textSize="18dp"
                android:text="Edit Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/google_1x"
               app:cardBackgroundColor="#34013747"
                android:layout_width="match_parent"
                android:layout_height="52dp">
                <EditText
android:layout_margin="@dimen/google_1x"
                    android:inputType="number"
                    android:hint="Enter Quntity Here"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

<androidx.cardview.widget.CardView
    app:cardCornerRadius="@dimen/google_1x"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="@dimen/google_1x"
    android:layout_marginEnd="16dp"
    app:cardBackgroundColor="@color/opv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="19dp"
        android:textColor="@color/whiteTextColor"
        android:padding="5dp"
        android:id="@+id/Confirm_alert"
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>