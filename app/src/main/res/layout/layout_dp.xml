<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nau"
    tools:context=".ProductProfileActivity"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolset"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="52dp"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/toolset"
            app:layout_constraintBottom_toBottomOf="@id/toolset"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Continue Shopping"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/opv2"
            app:layout_constraintLeft_toRightOf="@id/backbutton"/>

        <ImageView
            android:id="@+id/bucket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
            android:layout_marginRight="@dimen/google_1x"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bucket"
            android:id="@+id/activfav"
            android:src="@drawable/inactive_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/PDP_img"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="@dimen/google_1x"
                android:src="@drawable/profile"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ppname"
                    android:layout_width="200dp"

                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:padding="@dimen/google_1x"
                    android:textStyle="bold" />

                <TextView
                    android:padding="@dimen/google_1x"
                    app:layout_constraintTop_toBottomOf="@id/ppname"
                    android:id="@+id/ppdesc"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:maxLines="11"
                    android:text="@string/exampledata"
                    android:textColor="@color/opv1"
                    android:textSize="12dp"
                    />

                <TextView
                    android:padding="@dimen/google_1x"
                    app:layout_constraintTop_toBottomOf="@id/ppdesc"
                    android:id="@+id/ppric"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="100 PKR"
                    android:textColor="#013747"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:padding="@dimen/google_1x"
                    app:layout_constraintTop_toBottomOf="@id/ppric"
                    android:id="@+id/atcte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/google_1x"
                    android:text="Minimum order quantity: 4"
                    android:textAllCaps="true"
                    android:textColor="@color/opv1"


                    android:textSize="15dp" />
                <NumberPicker

                    app:layout_constraintTop_toBottomOf="@id/cquan"
                    app:layout_constraintLeft_toRightOf="@id/ppdesc"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/numberpicker"
                    android:layout_width="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="120dp"
                    />
                <TextView

                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/cquan"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:padding="8dp"
                    android:text="Choose Quantity"
                    android:textColor="#013747"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/paymentsetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp"
                app:layout_constraintTop_toBottomOf="@id/maincontainer23"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/stotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    app:layout_constraintTop_toBottomOf="@id/maincontainer23">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="@id/stotal"
                        app:layout_constraintTop_toTopOf="@id/stotal"
                        />

                    <TextView

                        android:id="@+id/subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs :100"

                        android:textColor="@color/opv2"
                        android:textSize="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/stotal"
                        app:layout_constraintTop_toTopOf="@id/stotal" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/stotal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Charges"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="@id/dtotal"
                        app:layout_constraintTop_toTopOf="@id/dtotal"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs :0"

                        android:textColor="@color/opv2"
                        app:layout_constraintEnd_toEndOf="@id/dtotal"
                        app:layout_constraintTop_toTopOf="@id/dtotal"
                        android:textSize="15dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ttotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/dtotal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="@id/ttotal"
                        app:layout_constraintTop_toTopOf="@id/ttotal"
                        />
                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs :100"

                        android:textColor="@color/opv2"
                        app:layout_constraintEnd_toEndOf="@id/ttotal"
                        app:layout_constraintTop_toTopOf="@id/ttotal"
                        android:textSize="15dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/google_1x"
                >
                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:clickable="true"
                    android:id="@+id/ptco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:padding="15dp"

                    android:layout_marginRight="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="15dp"

                    app:layout_constraintBottom_toBottomOf="@id/nau">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/opv1"
                        android:textSize="10dp"
                        android:padding="10dp"
                        android:background="@color/opv2"
                        android:text="Buy Now"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/atc"
                    android:clickable="true"
                    android:foreground="@color/opv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:padding="15dp"
                    android:layout_margin="1dp"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintRight_toLeftOf="@id/ptco"
                    android:foregroundGravity="center"



                    app:layout_constraintBottom_toBottomOf="@id/nau">
                    <TextView
                        android:id="@+id/atcte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/opv1"
                        android:textSize="10dp"
                        android:padding="10dp"


                        android:background="@color/opv2"
                        android:text="Add to Cart"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/atc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:padding="15dp"
                    android:layout_margin="15dp"
                    android:layout_marginBottom="15dp"

                    android:foregroundGravity="center"



                    app:layout_constraintBottom_toBottomOf="@id/nau">
                    <TextView
                        android:id="@+id/atcte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/opv2"
                        android:textSize="10dp"
                        android:padding="10dp"


                        android:background="@color/opv1"
                        android:text="Visit this Store"/>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>