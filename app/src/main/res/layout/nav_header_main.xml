<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#BE000000"
    android:gravity="bottom"
    android:orientation="horizontal"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="25dp"

        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:id="@+id/detail_iamge"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/blackTextColor"/>
    <LinearLayout
        android:layout_marginLeft="25dp"



        app:layout_constraintTop_toBottomOf="@id/detail_iamge"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/opv1"
            android:textStyle="bold"
            android:textSize="16dp"
            android:id="@+id/tilename_storename"
            android:layout_marginLeft="25dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/nav_header_subtitle" />
        <TextView
            android:id="@+id/headname_storename"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/nav_header_title"
            android:textSize="9sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>
    <LinearLayout


        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wallet_area"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/opv1"
            app:menu="@menu/bot">

            <TextView
                app:layout_constraintStart_toStartOf="@id/wallet_area"
                android:textStyle="bold"
 android:textSize="16dp"
                android:layout_marginLeft="@dimen/google_1x"
                android:id="@+id/wallet_amount"
                app:layout_constraintTop_toTopOf="@id/wallet_area"
                app:layout_constraintBottom_toBottomOf="@id/wallet_area"
                android:text="Your Wallet:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>