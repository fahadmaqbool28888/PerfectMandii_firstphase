<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/google_1x"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/add_them"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imagePath_pro"
                android:layout_width="70dp"
                android:layout_height="90dp"

                android:src="@drawable/optimizedlogo" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/nameofitem_"
                android:layout_width="match_parent"
                android:text="Produuctname"
                android:textSize="18dp"
                android:textColor="@color/opv2"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/priceofitem_"
                android:text="100"
                android:textColor="@color/opv1"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>