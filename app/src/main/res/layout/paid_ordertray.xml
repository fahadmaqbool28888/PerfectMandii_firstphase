<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_IF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="@dimen/google_1x"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/opv1"/>




        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_margin="5dp"
              >

                <TextView
                    android:id="@+id/invoiceid_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/opv2"

                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:text="Order #F6044727d2e000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shippingdate_"
                        android:text="Shipping Date: March 27,2021"
                        android:textColor="#313131"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:text="Order Date: "
                        android:textColor="#313131"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="9dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/orderdate_"
                        android:text="March 27,2021"
                        android:textColor="#313131"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="9dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shipping Address"
                    android:textColor="@color/opv2"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/fba_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textAllCaps="true"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:textColor="@color/opv1"
                    android:text=" House 7 street 6 Raja  Iqbal Town Rawalpindi"/>
            </LinearLayout>


        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/subtotalbill_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/opv1"
        android:textStyle="bold"
        android:text="Subtotal Rs : 1000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/opv1"
        android:textStyle="bold"
        android:text=" | "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#848484"
        android:textStyle="bold"
        android:text="To  Pay"/>
</LinearLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>