<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/backu">

    <ImageView
        android:id="@+id/logo_pal"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_marginBottom="228dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/modifylogo"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />





    <LinearLayout
        android:id="@+id/accaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/logo_pal">

        <androidx.cardview.widget.CardView

            android:layout_width="150dp"
            android:layout_height="wrap_content"


            app:cardCornerRadius="30dp"
      >



                <TextView
                    android:background="@color/scolor"
                    android:id="@+id/btn_login_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="phone"
                    android:padding="2dp"
                    android:textColor="@color/whiteTextColor"


                    android:text="Login"


                    android:textSize="20dp"


                    app:layout_constraintTop_toTopOf="parent" />



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lpsignup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
android:layout_marginLeft="15dp"

            app:cardCornerRadius="30dp"
          >



                <TextView
                    android:id="@+id/btn_signup_byn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="phone"
                    android:padding="2dp"

                    android:text="Sign Up"

                    android:textColor="@color/scolor"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ccp"
                    app:layout_constraintTop_toTopOf="parent" />



        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/acctext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/accaction">

        <androidx.cardview.widget.CardView
            android:id="@+id/containercode"
            android:layout_width="340dp"
            android:layout_height="wrap_content"


            android:layout_gravity="center"

            android:layout_margin="30dp"
            app:cardCornerRadius="5dp"

            app:layout_constraintBottom_toBottomOf="parent">


            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Enter mobile number or Email"
                android:background="@null"
                android:textSize="15dp"

                android:padding="12dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ccp"/>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/pasw"
            android:layout_width="340dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:padding="25dp"
            app:layout_constraintTop_toBottomOf="@id/containercode">


            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="Password"
                android:inputType="numberPassword"


                android:padding="12dp"
                android:textSize="15dp"

            />


        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <TextView
        android:id="@+id/fpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/acctext"
      app:layout_constraintEnd_toEndOf="parent"
        android:text="Forget Password?"
        android:textColor="@color/whiteTextColor"
        android:layout_marginTop="5dp"
        android:layout_marginRight="45dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lgbcon"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        app:layout_constraintTop_toBottomOf="@id/fpassword">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="@id/lgbcon"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="@id/lgbcon"
>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3F00FF"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="phone"
                    android:padding="5dp"

                    android:text="Login"

                    android:textColor="@color/whiteTextColor"
                    android:textSize="20dp"
                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/sociallogincont"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/lgbcon">



    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>

