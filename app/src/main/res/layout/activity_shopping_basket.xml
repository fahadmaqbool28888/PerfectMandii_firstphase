<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/opv2"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <ImageView
                android:id="@+id/bax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backspace_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="@color/opv2"
                android:text="Checkout"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shoppingbasket"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                app:layout_constraintTop_toBottomOf="@id/appbar"

               />


    <androidx.cardview.widget.CardView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"


        app:layout_constraintCircleRadius="@dimen/google_1x"
        android:backgroundTintMode="screen"
        android:padding="20dp"




        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/itrem"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/selecteditem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    app:layout_constraintTop_toTopOf="@id/itrem"
                    app:layout_constraintStart_toStartOf="@id/itrem"

                    android:text="Selected Item (0)"/>

                <TextView
                    android:id="@+id/totalbill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    app:layout_constraintTop_toTopOf="@id/itrem"
                    app:layout_constraintEnd_toEndOf="@id/itrem"
                    android:text="Total Amount:0" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/checkoutforshopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#F29B0E"

                    app:layout_constraintBottom_toBottomOf="@id/itrem">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="end"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/itrem"
                        app:layout_constraintEnd_toEndOf="@id/itrem"
                        android:text="Checkout"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:textColor="@color/whiteTextColor"/>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>