<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FreightForwarder.FreightForwarderActivity">
    <androidx.constraintlayout.widget.ConstraintLayout

android:visibility="gone"
        android:padding="@dimen/google_1x"

        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/maincontainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/freigh_title"
            android:textSize="18dp"
            android:padding="10dp"
            android:textColor="#A1887F"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/maincontainer"
            app:layout_constraintStart_toStartOf="@id/maincontainer"
            android:text="Select Freight Forwarder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout

            android:id="@+id/sp_con"
            app:layout_constraintTop_toBottomOf="@id/freigh_title"
            android:layout_margin="@dimen/google_1x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/spinContainer"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:backgroundTint="#DEC19b"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/google_1x"
                android:layout_height="wrap_content">
                <Spinner
                    android:padding="@dimen/google_1x"
                    android:layout_gravity="center"

                    android:id="@+id/Freigh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/mbp"
            app:layout_constraintTop_toBottomOf="@id/sp_con"
            android:layout_marginTop="@dimen/google_1x"
            android:padding="16dp"
            android:background="@color/opv2"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/manage_byself_1"
                android:textColor="#ffffff"
                app:buttonTint="@color/whiteTextColor"
                app:layout_constraintStart_toStartOf="@id/lastwala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/lastwala"
                app:layout_constraintBottom_toBottomOf="@id/lastwala"
                android:text="Manage by PerfectMANDI"
                android:textSize="16dp"
                android:padding="@dimen/google_1x"
                />

            <TextView

                android:textColor="@color/whiteTextColor"
                app:layout_constraintStart_toStartOf="@id/lastwala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/lastwala"
                app:layout_constraintBottom_toBottomOf="@id/lastwala"
                android:text="Special Transport (Motorbike/Taxi/Pickup/MiniTruck) will be arranged as per order size."
                android:textSize="12dp"
                android:textStyle="bold"
                />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/confirm_d"
            app:cardCornerRadius="@dimen/google_1x"
            android:layout_marginTop="@dimen/google_1x"
            android:layout_marginRight="@dimen/google_1x"
            app:cardBackgroundColor="@color/opv1"
           app:layout_constraintTop_toBottomOf="@id/mbp"
            app:layout_constraintEnd_toEndOf="@id/maincontainer"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">
            <TextView




                android:padding="10dp"

                android:textSize="18dp"

                android:textColor="@color/whiteTextColor"


                android:text="Confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.cardview.widget.CardView
       android:id="@+id/step1"
       android:visibility="gone"
       app:cardCornerRadius="15dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView


           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:text="Add Freight Forwarder"
           android:textSize="20dp"
           android:background="@color/opv1"
           android:padding="20sp"
           android:textColor="@color/whiteTextColor"/>
   </androidx.cardview.widget.CardView>

