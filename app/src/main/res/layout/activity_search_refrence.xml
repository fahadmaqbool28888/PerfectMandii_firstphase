<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SearchRefrenceActivity">

    <com.google.android.material.appbar.AppBarLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/app_bar"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:theme="@style/AppBarOverlay"/>

    <LinearLayout
        android:id="@+id/seach_item_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"

        android:layout_weight="0.6"
        android:background="@color/opv1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/filter_container"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginRight="@dimen/google_1x"
                app:layout_constraintTop_toTopOf="@id/filter_container"
                app:layout_constraintBottom_toBottomOf="@id/filter_container"
                app:layout_constraintRight_toLeftOf="@id/close_filter"
                android:src="@drawable/ic_advanced_search"
                android:id="@+id/adv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/close_filter"
                app:layout_constraintBottom_toBottomOf="@id/filter_container"
                app:layout_constraintEnd_toEndOf="@id/filter_container"
                app:layout_constraintTop_toTopOf="@id/filter_container"
                android:layout_marginRight="@dimen/google_1x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_name"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <LinearLayout

        android:id="@+id/seach_item_bar"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/asd">
            <LinearLayout
                app:layout_constraintTop_toTopOf="@id/asd"
                app:layout_constraintBottom_toBottomOf="@id/asd"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/search_term"
                    android:hint="Please search here"
                    android:textColor="@color/blackTextColor"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView

                    app:layout_constraintLeft_toRightOf="@id/search_term"
                    android:id="@+id/search_bar"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#25000000"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Search"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/app_bar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/find_cycl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
 />

    </LinearLayout>

</LinearLayout>