<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Dashboard.OPActivity"
    tools:ignore="HardcodedText">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_vieworder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <ImageView
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginLeft="@dimen/google_1x"
            android:id="@+id/back_12"
            android:src="@drawable/backspace_24"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView

            android:layout_marginLeft="@dimen/google_1x"
            app:layout_constraintTop_toTopOf="@+id/toolbar_vieworder"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_vieworder"
            app:layout_constraintStart_toEndOf="@id/back_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Order Details"
            android:textStyle="bold"
            android:textColor="@color/opv2"/>

        <TextView

            android:id="@+id/confirm_order_detail"
            android:layout_marginLeft="@dimen/google_1x"
            app:layout_constraintTop_toTopOf="@+id/toolbar_vieworder"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_vieworder"
             app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Confirm"
           android:textStyle="bold"
            android:layout_marginRight="@dimen/google_1x"
            android:textColor="@color/opv1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_bay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/opv1"
            android:id="@+id/order_total"
            app:layout_constraintTop_toTopOf="@id/order_bay"
            app:layout_constraintStart_toStartOf="@id/order_bay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        tools:ignore="MissingClass">

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/google_1x"
            app:cardBackgroundColor="@color/opv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/getProduct"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>
