<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.vendor.dispatchActivity"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    android:orientation="vertical"

    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/opv2"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <ImageView
                android:id="@+id/bax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backspace_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="@color/opv2"
                android:text="Dispatch"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shell"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"

        android:background="@color/opv2"
        app:layout_constraintTop_toBottomOf="@id/appbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Confirmation"
            app:layout_constraintStart_toStartOf="@id/shell"
            app:layout_constraintTop_toTopOf="@id/shell"
            android:padding="@dimen/google_1x"
            app:layout_constraintBottom_toBottomOf="@id/shell"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/dispatchnoitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Items: 8"
            android:padding="@dimen/google_1x"
            app:layout_constraintTop_toTopOf="@id/shell"
            app:layout_constraintBottom_toBottomOf="@id/shell"
            app:layout_constraintEnd_toEndOf="@id/shell"
            android:textColor="#ffffff"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


      <ScrollView
          app:layout_constraintTop_toBottomOf="@id/shell"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              app:layout_constraintTop_toBottomOf="@id/shell">
          <androidx.constraintlayout.widget.ConstraintLayout
              android:id="@+id/shell_1"
              android:layout_width="match_parent"
              android:layout_height="32dp"
              android:orientation="horizontal"

              app:layout_constraintTop_toBottomOf="@id/shell">

              <TextView
                  android:visibility="gone"
                  android:id="@+id/selectdoc"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Select All"
                  android:padding="8dp"
                  android:layout_marginRight="5dp"
                  app:layout_constraintTop_toTopOf="@id/shell_1"
                  app:layout_constraintBottom_toBottomOf="@id/shell_1"
                  app:layout_constraintEnd_toEndOf="@id/shell_1"
                  android:textColor="@color/blackTextColor"
                  />
              <CheckBox
                  android:visibility="gone"
                  android:id="@+id/dispatchall_"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="@id/shell_1"
                  app:layout_constraintBottom_toBottomOf="@id/shell_1"
                  app:layout_constraintRight_toLeftOf="@id/selectdoc"/>

          </androidx.constraintlayout.widget.ConstraintLayout>


          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/dispatch_basket"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="1dp"
              android:layout_marginEnd="1dp"
              android:layout_marginBottom="1dp"

              app:layout_constraintTop_toBottomOf="@id/shell_1"

              />
          <androidx.constraintlayout.widget.ConstraintLayout
              android:id="@+id/footer_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/dispatch_basket">
              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_margin="15dp"

                  android:id="@+id/child_footer_item"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="@id/footer_item"
                  >
                  <TextView
                    android:padding="@dimen/google_1x"
                      android:id="@+id/totalorderamount"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintTop_toTopOf="@id/child_footer_item"
                      app:layout_constraintStart_toStartOf="@id/child_footer_item"
                      android:text="Total Order Amount"
                      android:textColor="@color/blackTextColor"/>
                  <TextView
                      android:padding="@dimen/google_1x"
                      android:id="@+id/totaldamount"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintStart_toStartOf="@id/totalorderamount"
                      app:layout_constraintTop_toBottomOf="@id/totalorderamount"
                      android:text="Total Dispatch Amount"
                      android:textColor="@color/blackTextColor"/>
                  <TextView
                      android:visibility="gone"
                      android:padding="@dimen/google_1x"
                      android:id="@+id/vio"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintStart_toStartOf="@id/totalorderamount"
                      app:layout_constraintTop_toBottomOf="@id/totaldamount"
                      android:text="Variation in order"
                      android:textColor="@color/blackTextColor"/>
                  <TextView
                      app:layout_constraintRight_toLeftOf="@id/totalorderamount"
                      app:layout_constraintEnd_toEndOf="@id/child_footer_item"
                      android:id="@+id/totalorderamountget_"
                      app:layout_constraintTop_toTopOf="@id/child_footer_item"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Rs. 20000"
                      android:textColor="@color/blackTextColor"/>
                  <TextView
                      app:layout_constraintRight_toLeftOf="@id/totalorderamount"
                      app:layout_constraintEnd_toEndOf="@id/child_footer_item"
                      android:id="@+id/totaldamountget"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"

                      app:layout_constraintTop_toBottomOf="@id/totalorderamount"
                      android:text="Rs. 20000"
                      android:textColor="@color/blackTextColor"/>
                  <TextView
                      app:layout_constraintRight_toLeftOf="@id/totalorderamount"
                      app:layout_constraintEnd_toEndOf="@id/child_footer_item"
                      android:id="@+id/vioget"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"

                      android:visibility="gone"
                      app:layout_constraintTop_toBottomOf="@id/totaldamount"
                      android:text="0"
                      android:textColor="@color/blackTextColor"/>

                  <TextView

                      android:id="@+id/selecteditem_get"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="8dp"
                      android:textStyle="bold"
                      app:layout_constraintStart_toStartOf="@id/child_footer_item"

                      app:layout_constraintTop_toBottomOf="@id/vio"
                      android:text="Selected Item (8)"
                      android:textColor="@color/blackTextColor"/>

                  <androidx.cardview.widget.CardView
                      android:id="@+id/dispatchorder"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                   app:cardCornerRadius="@dimen/google_1x"
                      android:background="#E29D02"
                      android:layout_marginBottom="@dimen/google_1x"
                      app:layout_constraintStart_toStartOf="@id/child_footer_item"
                      app:layout_constraintEnd_toEndOf="@id/child_footer_item"
                      app:layout_constraintTop_toBottomOf="@id/selecteditem_get">
                      <TextView

                          android:id="@+id/dispatchconfirm"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"

                          android:background="#E29D02"

                          android:padding="10dp"
                          android:textStyle="bold"
                          android:textSize="16dp"
                          app:layout_constraintStart_toStartOf="@id/child_footer_item"

                          app:layout_constraintTop_toBottomOf="@id/selecteditem_get"
                          android:text="Dispatch Confirm"
                          android:textColor="@color/whiteTextColor"/>
                  </androidx.cardview.widget.CardView>


              </androidx.constraintlayout.widget.ConstraintLayout>
          </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
      </ScrollView>




</LinearLayout>