<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#c6d7d2">

    <ImageView
        android:id="@+id/logo_pal"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/optimizedlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />





    <LinearLayout
        android:id="@+id/accaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/logo_pal">

        <androidx.cardview.widget.CardView

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"



            >



            <TextView
                android:background="#DC8013"
                android:id="@+id/btn_login_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="phone"
                android:padding="2dp"
                android:textStyle="bold"

                android:textColor="@color/whiteTextColor"


                android:text="Login"


                android:textSize="20dp"


                app:layout_constraintTop_toTopOf="parent" />



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lpsignup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="7dp"


            >



            <TextView
                android:id="@+id/btn_signup_byn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="phone"
                android:padding="2dp"

                android:text="Sign Up"

                android:textColor="#013747"
                android:textStyle="bold"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ccp"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/acctext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/accaction">

        <androidx.cardview.widget.CardView
            android:id="@+id/containercode"
            android:layout_width="340dp"
            android:layout_height="wrap_content"


            android:layout_gravity="center"

            android:layout_margin="32dp"
            app:cardCornerRadius="5dp"

            app:layout_constraintBottom_toBottomOf="parent">


            <EditText
                android:id="@+id/input_phone_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="11"
                android:layout_margin="4dp"
                android:hint="Enter mobile number"
                android:background="@null"
                android:textSize="15dp"
                android:padding="12dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ccp"

                />



        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:id="@+id/forgetpasswordoption"



            >
            <TextView
                app:layout_constraintTop_toTopOf="@id/forgetpasswordoption"
                android:id="@+id/fpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Forgot your pin?"
                android:textColor="#013747"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/eyop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enter your 4-digit login pin"
            android:textColor="@color/opv2"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/google_1x"
            android:textStyle="bold"

            android:textSize="18dp"/>



        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            app:layout_constraintTop_toBottomOf="@id/containercode"
            android:layout_gravity="center">
            <com.poovam.pinedittextfield.CirclePinField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                app:noOfFields="4"
                android:textSize="16sp"
                android:textSelectHandle="@drawable/text_handle"
                app:highlightColor="@color/opv2"
                app:circleRadius="15dp"
                app:fillerRadius="12dp"
                app:fillerColor="@color/opv1"
                app:fieldBgColor="@color/whiteTextColor"
                android:id="@+id/circleField"/>

