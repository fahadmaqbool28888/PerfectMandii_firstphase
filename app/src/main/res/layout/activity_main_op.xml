<?xml version="1.0" encoding="utf-8"?>

<!--the root view must be the DrawerLayout-->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_12"
            android:theme="@style/ToolBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/opv2"/>

        <!-- Let's add fragment -->
        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
           android:id="@+id/_bnavg_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/opv1"
            app:menu="@menu/bot">

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/numb1_1"
                android:layout_width="22dp"
                app:cardCornerRadius="10dp"
                android:layout_height="22dp"

android:layout_marginBottom="14dp"
                android:layout_marginLeft="@dimen/google_1x"
                android:layout_gravity="center"
                app:cardBackgroundColor="#900D09" >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/numbr"
                    android:layout_height="match_parent">

                    <TextView
                        app:layout_constraintStart_toStartOf="@id/numbr"
                        app:layout_constraintEnd_toEndOf="@id/numbr"
                        app:layout_constraintTop_toTopOf="@id/numbr"
                        app:layout_constraintBottom_toBottomOf="@id/numbr"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="9dp"

                        android:id="@+id/value"
                        android:text="15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>

    <!--this the navigation view which draws
        and shows the navigation drawer-->
    <!--include the menu created in the menu folder-->
    <com.google.android.material.navigation.NavigationView
       android:id="@+id/main_screen_menu_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        app:menu="@menu/bot" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:padding="@dimen/google_1x"
                android:textSize="18dp"
                android:textColor="@color/opv2"
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
