<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:id="@+id/bankinfotab"
    app:layout_constraintTop_toTopOf="@id/bankinfotab"
    app:layout_constraintStart_toStartOf="@id/bankinfotab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RadioButton
        android:layout_margin="5dp"
        android:id="@+id/banktitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank Name"/>
<androidx.cardview.widget.CardView
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/accountinput"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="32dp"/>
</androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/bankinformation"
        android:layout_margin="5dp"
        android:textColor="@color/blackTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter Askari Bank Account Number, follow the below layout BBBBAAAAAAAAAA where BBBB = Branch Code and AAAAAAAAAAA = Account Number OR Please enter the complete 24 alpha-numeric IBAN provided by the beneficiary"/>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>