<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/opv2"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <ImageView
                android:id="@+id/bax_q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backspace_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="@color/opv2"
                android:text="Order Detail"/>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"

        android:layout_margin="@dimen/google_1x"
        android:textSize="15dp"
        android:text="Not Paid"
        android:textColor="@color/opv1"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/opv2"
        app:layout_constraintTop_toBottomOf="@id/appbar"/>
    <LinearLayout
        android:id="@+id/orderwala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/google_1x"
        >
        <TextView
            android:id="@+id/otext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Number: "
            android:textColor="@color/opv2"/>
        <TextView
            android:id="@+id/itext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invoice Number: "
            android:textColor="@color/opv2"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Order_Detail_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintTop_toBottomOf="@id/orderwala"

        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bill_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/google_1x"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/subtotal_Bill"
            android:text="Sub Total: "
            android:textSize="15dp"
            android:textColor="@color/opv2"
            app:layout_constraintTop_toTopOf="@id/bill_board"
            app:layout_constraintStart_toStartOf="@id/bill_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/getsubtotal_i"
            app:layout_constraintTop_toTopOf="@id/bill_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"
            android:textColor="@color/opv2"
            android:textSize="15dp"

            app:layout_constraintLeft_toRightOf="@id/subtotal_Bill"/>
        <TextView

            android:id="@+id/packagingcost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/subtotal_Bill"
           app:layout_constraintStart_toStartOf="@id/bill_board"
            android:text="Packaging Cost : 100"
            android:textSize="15dp"
            android:textColor="@color/opv2"/>
        <TextView
            android:id="@+id/Grandtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/packagingcost"
            android:text="Grand Total :5100"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@id/bill_board"
            android:textColor="@color/opv2">

        </TextView>
        <TextView
            android:id="@+id/submit_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Grandtotal"
            android:background="@color/opv2"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/bill_board"
            android:text="Submit Bank Slip"
            android:textSize="15dp"
            android:padding="@dimen/google_1x"
            app:layout_constraintStart_toStartOf="@id/bill_board"
            android:textColor="@color/opv1">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>