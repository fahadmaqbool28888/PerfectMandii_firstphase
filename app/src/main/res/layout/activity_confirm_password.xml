<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PasswordChange.confirmPassword">

    <TextView
        android:id="@+id/fpassword_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter code we sent to 0312******9"
        android:textSize="23dp"
        android:padding="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:textColor="@color/opv1"
        android:gravity="center_horizontal" />
    <ImageView
        android:id="@+id/icon"
        app:layout_constraintTop_toBottomOf="@id/fpassword_text"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/lock1"/>




        <LinearLayout
            android:id="@+id/input_confirm_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="45dp"
            android:gravity="center"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@id/icon">


            <com.poovam.pinedittextfield.CirclePinField
                android:id="@+id/circleField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:textSelectHandle="@drawable/text_handle"
                android:textSize="16sp"
                app:circleRadius="15dp"
                app:fieldBgColor="@color/whiteTextColor"
                app:fillerColor="@color/opv1"
                app:fillerRadius="12dp"
                app:highlightColor="@color/opv2"
                app:noOfFields="4" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/input_confirm_pin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="45dp"
        android:gravity="center"
        android:visibility="gone"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/input_confirm_pin">



        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="4dp"
            android:layout_margin="5dp"
            >
            <EditText
                android:id="@+id/num_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textAlignment="center"
                android:inputType="numberPassword"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            >
            <EditText
                android:id="@+id/num_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:inputType="numberPassword"
                android:background="@null"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            >
            <EditText
                android:id="@+id/num_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:inputType="numberPassword"
                android:background="@null"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            >
            <EditText
                android:id="@+id/num_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textAlignment="center"
                android:inputType="numberPassword"

                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/opv1"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="phone"
                android:padding="5dp"

                android:text="Next"

                android:textColor="@color/whiteTextColor"
                android:textSize="20dp"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>