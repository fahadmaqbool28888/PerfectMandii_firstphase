<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_point"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/pic_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/data_mal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
          android:id="@+id/heading_co"
          android:layout_width="0dp"
          android:layout_weight="3"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif-black"
          android:padding="14dp"

          android:textSize="17sp"

          app:layout_constraintStart_toStartOf="@id/data_mal"
          app:layout_constraintTop_toTopOf="@id/data_mal"

          android:text="Heading "
          android:textColor="@color/blackTextColor" />
      <TextView
          android:padding="14dp"
          app:layout_constraintTop_toTopOf="@id/data_mal"
          app:layout_constraintEnd_toEndOf="@id/data_mal"
          android:id="@+id/shop_more"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif-black"
          android:textSize="14sp"
          android:text="Load More>>"
          android:gravity="bottom"
          android:textColor="@color/opv1"
           />

  </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.cardview.widget.CardView
     android:padding="@dimen/google_1x"

       app:cardCornerRadius="13dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <androidx.recyclerview.widget.RecyclerView

           android:id="@+id/opwq"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
   </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>