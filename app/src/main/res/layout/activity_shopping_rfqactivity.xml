<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    tools:context=".ShoppingRFQActivity"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:titleTextColor="@color/opv2"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/bax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backspace_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textSize="26dp"
                    app:layout_constraintLeft_toRightOf="@id/bax"
                    android:textStyle="bold"
                    android:textColor="@color/opv2"
                    android:text="RFQ Item"/>
                <TextView
                    android:visibility="gone"
                    android:text="Select All"
                    android:paddingRight="20dp"
                    android:id="@+id/deleteb"
                    android:textSize="19dp"
                    android:textColor="@color/opv1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_baseline_delete_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintTop_toBottomOf="@id/appbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <CheckBox


                android:id="@+id/editva"
                android:text="Select All"
                android:textColor="@color/opv2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shoppingbasket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"



                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"


        app:layout_constraintCircleRadius="@dimen/google_1x"
        android:backgroundTintMode="screen"
        android:padding="20dp"




        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/itrem"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/selecteditem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    app:layout_constraintTop_toTopOf="@id/itrem"
                    app:layout_constraintStart_toStartOf="@id/itrem"

                    android:text="Selected Item (0)"/>

                <TextView
                    android:id="@+id/totalbill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    app:layout_constraintTop_toTopOf="@id/itrem"
                    app:layout_constraintEnd_toEndOf="@id/itrem"
                    android:text="Total Amount:0" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/checkoutforshopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#F29B0E"

                    app:layout_constraintBottom_toBottomOf="@id/itrem">
                    <TextView
                        android:id="@+id/cts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="end"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/itrem"
                        app:layout_constraintEnd_toEndOf="@id/itrem"
                        android:text="Checkout"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:textColor="@color/whiteTextColor"/>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
