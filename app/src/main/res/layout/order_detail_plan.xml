<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="@dimen/google_1x"
            android:id="@+id/invoice_num"
            android:layout_gravity="center_horizontal"
            android:text="Order Split"
            android:textColor="@color/blackTextColor"
            android:layout_width="0dp"
            android:padding="@dimen/google_1x"
            android:layout_margin="@dimen/google_1x"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/invoice_total"
            android:textColor="@color/blackTextColor"
            android:text="Total Amount"
            android:padding="@dimen/google_1x"

            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/status_sub"
            android:textColor="@color/blackTextColor"

            android:text="Status"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/google_1x"

            android:layout_height="wrap_content"/>
        <ImageView

            android:id="@+id/status_sub_view"
            android:textColor="@color/blackTextColor"

            android:src="@mipmap/ic_eye_view"
            android:text="Status"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/google_1x"

            android:layout_height="40dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>