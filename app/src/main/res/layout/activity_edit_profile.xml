<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.User.customerprofile.CustomerDashboard">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/opv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/opv1"

            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
            <ImageView
                android:id="@+id/sidnav"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20dp"

                android:textColor="@color/opv1"
                android:text="Perfect"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mandi"
                android:textColor="@color/opv1"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="20dp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/appbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/appbar">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text="Upload Profile"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/upload_card"

                    android:layout_width="100dp"
                    android:layout_height="100dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/upload_sa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView


                            android:id="@+id/viewimage"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/uploadicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            app:layout_constraintTop_toTopOf="@id/upload_sa"
                            app:layout_constraintBottom_toBottomOf="@id/upload_sa"
                            app:layout_constraintStart_toStartOf="@id/upload_sa"
                            app:layout_constraintEnd_toEndOf="@id/upload_sa"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>




                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/opv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name" />

                    <EditText

                        android:id="@+id/fullname"
                        android:inputType="textAutoComplete"
                        android:textColor="@color/opv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:maxLength="45"
                        android:hint="Full Name " />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/opv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number" />

                    <EditText
                        android:enabled="false"
                        android:id="@+id/phonenumber_r"
                        android:textColor="@color/opv1"
                        android:inputType="phone"
                        android:hint="03*******0"
                        android:maxLength="12"
                        android:editable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/opv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CNIC" />

                    <EditText
                        android:id="@+id/cnic"
                        android:maxLength="15"
                        android:inputType="number"
                        android:textColor="@color/opv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="1234512345673" />
                </LinearLayout>



                <LinearLayout

                    android:id="@+id/province_spin"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:textColor="@color/opv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Province" />
                    <Spinner
                        android:id="@+id/province_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout

                    android:id="@+id/city_s"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/opv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City" />

                    <Spinner
                        android:id="@+id/city_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/opv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Billing Address" />

                    <EditText
                        android:id="@+id/billingaddress"
                        android:textColor="@color/opv1"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:hint="" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/sbss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/opv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Same as Billing Address" />

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/opv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shipping Address" />

                    <EditText
                        android:id="@+id/shippingaddress"
                        android:textColor="@color/opv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:hint="" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/saverecord"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:background="#F39C0F"
                        android:textColor="@color/whiteTextColor"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:textSize="25dp"
                        android:text="Save"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>






</LinearLayout>
