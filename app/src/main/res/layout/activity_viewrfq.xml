<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/head_node"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"

        android:padding="10dp"
        android:layout_height="60dp">
    <TextView
        app:layout_constraintStart_toStartOf="@id/head_node"
        app:layout_constraintTop_toTopOf="@id/head_node"
        android:id="@+id/Num"
        android:text="1"
        android:layout_margin="11dp"
        android:padding="1dp"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="11dp"
            android:padding="1dp"
            android:id="@+id/date_rfqgen"
          app:layout_constraintStart_toEndOf="@id/Num"
            app:layout_constraintTop_toTopOf="@id/head_node"
            android:text="13/04/2024"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="11dp"
            android:padding="1dp"
            android:id="@+id/num_rfqgen"
            app:layout_constraintStart_toEndOf="@id/date_rfqgen"
            app:layout_constraintTop_toTopOf="@id/head_node"
            android:text="13/04/2024"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"/>
        <Button
            app:layout_constraintTop_toTopOf="@id/head_node"
            android:id="@+id/btn_rfqgen"
            android:text="View Rfq"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toEndOf="@id/num_rfqgen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>