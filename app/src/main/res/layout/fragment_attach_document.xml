<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="@color/opv2"
            android:text="Attach Document"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:padding="10dp"
            android:textColor="#A1887F"
            android:textStyle="bold"
            android:text="CNIC*"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/icon_c"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/cnic_front_side"
                        app:layout_constraintTop_toTopOf="@id/icon_c"
                        app:layout_constraintStart_toStartOf="@id/icon_c"
                        app:layout_constraintEnd_toEndOf="@id/icon_c"
                        app:layout_constraintBottom_toBottomOf="@id/icon_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:id="@+id/cnic_front_side_1"
                        app:layout_constraintTop_toTopOf="@id/icon_c"
                        app:layout_constraintStart_toStartOf="@id/icon_c"
                        app:layout_constraintEnd_toEndOf="@id/icon_c"
                        app:layout_constraintBottom_toBottomOf="@id/icon_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/uploadicon"/>

                    <TextView
                        android:id="@+id/frontsidetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Front Side"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="@id/icon_c"
                        app:layout_constraintEnd_toEndOf="@id/icon_c"
                        app:layout_constraintTop_toBottomOf="@+id/cnic_front_side_1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="5dp"/>
            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/icon_c"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/cnic_back_side"
                        app:layout_constraintTop_toTopOf="@id/icon_c"
                        app:layout_constraintStart_toStartOf="@id/icon_c"
                        app:layout_constraintEnd_toEndOf="@id/icon_c"
                        app:layout_constraintBottom_toBottomOf="@id/icon_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:id="@+id/cnic_back_side_1"
                        app:layout_constraintTop_toTopOf="@id/icon_c"
                        app:layout_constraintStart_toStartOf="@id/icon_c"
                        app:layout_constraintEnd_toEndOf="@id/icon_c"
                        app:layout_constraintBottom_toBottomOf="@id/icon_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/uploadicon"/>

                    <TextView
                        android:id="@+id/backsidetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Back Side"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="@id/icon_c"
                        app:layout_constraintEnd_toEndOf="@id/icon_c"
                        app:layout_constraintTop_toBottomOf="@+id/cnic_back_side_1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#A1887F"
            android:text="Utility Bill*"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/icon_c"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/utility_bill"
                        app:layout_constraintTop_toTopOf="@id/icon_c"
                        app:layout_constraintStart_toStartOf="@id/icon_c"
                        app:layout_constraintEnd_toEndOf="@id/icon_c"
                        app:layout_constraintBottom_toBottomOf="@id/icon_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:id="@+id/utility_bill_1"
                        app:layout_constraintTop_toTopOf="@id/icon_c"
                        app:layout_constraintStart_toStartOf="@id/icon_c"
                        app:layout_constraintEnd_toEndOf="@id/icon_c"
                        app:layout_constraintBottom_toBottomOf="@id/icon_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/uploadicon"/>
                    <TextView

                        android:id="@+id/ubtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Utility Bill"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="@id/icon_c"
                        app:layout_constraintEnd_toEndOf="@id/icon_c"
                        app:layout_constraintTop_toBottomOf="@+id/utility_bill_1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="5dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/opv2"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:background="@color/opv2"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Previous"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/create_customer_profile"
                app:cardBackgroundColor="@color/opv1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/next_button_attachD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textColor="#ffff"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Create Your Profile"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>