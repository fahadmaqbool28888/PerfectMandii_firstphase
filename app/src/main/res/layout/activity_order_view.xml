<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderViewActivity"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/opv2"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="@color/opv2"
                android:text="Confirm Order"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        >

        <TextView
            android:id="@+id/welcome_line"
            app:layout_constraintTop_toTopOf="@id/cv_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/opv2"
            app:layout_constraintStart_toStartOf="@id/cv_container"
            app:layout_constraintEnd_toEndOf="@id/cv_container"
            android:text="Dear (Name), thank you for your order!"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/welcome_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/opv1"
            android:gravity="center"
            android:layout_margin="@dimen/google_1x"
            app:layout_constraintStart_toStartOf="@id/cv_container"
            app:layout_constraintEnd_toEndOf="@id/cv_container"
            android:text="Weâ€™ve received your order, you will receive shipment soon. You can review your purchase details below."/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/google_1x"
        app:layout_constraintTop_toBottomOf="@id/cv_container"
        >


        <TextView
            android:id="@+id/order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/cv_container1"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="@color/opv2"
            android:text="Order Summary"
            />
        <TextView
            android:id="@+id/dateandtime"
            app:layout_constraintTop_toBottomOf="@id/order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="January 7,2021"
            android:textColor="@color/opv2"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/cv_container2"
        app:layout_constraintTop_toBottomOf="@id/cv_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginBottom="@dimen/google_1x"
android:layout_margin="25dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >



            <LinearLayout
android:id="@+id/orderno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/orderid"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:text="Order No:"/>
                <TextView
                    android:id="@+id/getorderid"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="123456"/>

            </LinearLayout>
            <LinearLayout

                android:id="@+id/invoiceno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/invoiceid"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:text="Invoice No:"/>
                <TextView
                    android:id="@+id/invoiceTotal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="123456"/>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:text="Sub Total Price"/>
                <TextView

                    android:id="@+id/subtotal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="Rs : 500000"/>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:text="Discount"/>
                <TextView
                    android:id="@+id/discountprice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="Rs : 500000"/>

            </LinearLayout>
            <LinearLayout

                android:id="@+id/previous_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:text="Previous Balance"/>
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="Rs : 500000"/>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:text="Packing Charges"/>
                <TextView

                    android:id="@+id/packingcharges"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="Rs : 500000"/>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"


                android:layout_margin="25dp"
                >

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:text="Total"/>
                <TextView

                    android:id="@+id/totalordervalue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="Rs : 500000"/>

            </LinearLayout>




        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cv_container2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/opv2"
            android:textSize="@dimen/google_1x"
            android:text="@string/text_str"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"


        app:layout_constraintCircleRadius="@dimen/google_1x"
        android:backgroundTintMode="screen"
        android:padding="20dp"




        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/itrem"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/checkoutforshopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#F29B0E"

                    app:layout_constraintBottom_toBottomOf="@id/itrem">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="end"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/itrem"
                        app:layout_constraintEnd_toEndOf="@id/itrem"
                        android:text="Continue to Shopping"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:textColor="@color/whiteTextColor"/>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>