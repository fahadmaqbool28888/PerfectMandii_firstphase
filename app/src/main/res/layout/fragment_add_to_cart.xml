<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context=".Activity.CustomerOrder.OrderType.AddToCart"
android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

    >
<TextView
    android:id="@+id/qpro"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text="Your Quotation is in process"
    android:textColor="@color/black"
    android:textSize="@dimen/_20sdp"
    android:textAlignment="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/qpro1"
       app:layout_constraintStart_toStartOf="@id/qpro"

        app:layout_constraintEnd_toEndOf="@id/qpro"
        app:layout_constraintTop_toBottomOf="@id/qpro"
        android:text="Contact your customer service (03345381060), if Quotation not recived within 30 minutes"
        android:textColor="@color/black"
        android:textSize="14dp"
android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                app:layout_constraintTop_toBottomOf="@id/appbar">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <CheckBox


                        android:id="@+id/editva"
                        android:text="Select All"
                        android:textColor="@color/opv2"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/shoppingbasket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"



                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">
            <androidx.cardview.widget.CardView
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"


                app:layout_constraintCircleRadius="@dimen/google_1x"
                android:backgroundTintMode="screen"
                android:padding="20dp"




                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/itrem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            app:layout_constraintStart_toStartOf="@id/itrem"
                            android:id="@+id/selecteditem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="15dp"
                       app:layout_constraintBottom_toTopOf="@id/checkoutforshopping"

                            android:text="Selected Item (0)"/>

                        <TextView
                            android:id="@+id/totalbill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            app:layout_constraintBottom_toTopOf="@id/checkoutforshopping"
                            app:layout_constraintEnd_toEndOf="@id/itrem"
                            android:text="Total Amount:0" />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/checkoutforshopping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="#F29B0E"

                            app:layout_constraintBottom_toBottomOf="@id/itrem">
                            <TextView
                                android:id="@+id/cts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="end"
                                android:textStyle="bold"
                                app:layout_constraintTop_toTopOf="@id/itrem"
                                app:layout_constraintEnd_toEndOf="@id/itrem"
                                android:text="Checkout"
                                android:textSize="20dp"
                                android:padding="10dp"
                                android:textColor="@color/whiteTextColor"/>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>





</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>