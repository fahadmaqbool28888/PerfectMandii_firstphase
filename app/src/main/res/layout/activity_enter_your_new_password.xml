<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterYourNewPasswordActivity">

    <TextView
        android:id="@+id/fpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset your pin?"
        android:textSize="36dp"
        android:padding="25dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:textColor="@color/opv1"
        android:gravity="center_horizontal" />
    <ImageView
        android:id="@+id/icon"
        app:layout_constraintTop_toBottomOf="@id/fpassword"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/lock1"/>


<TextView
    android:text="Please set your new pin"
    android:textColor="@color/opv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@id/pin_panel"
    app:layout_constraintBottom_toTopOf="@id/pin_panel"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pin_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="45dp"
            android:gravity="center"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@id/icon">

                <com.poovam.pinedittextfield.CirclePinField
                    app:layout_constraintTop_toTopOf="@id/pin_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    app:noOfFields="4"
                    android:textSize="16sp"
                    android:textSelectHandle="@drawable/text_handle"
                    app:highlightColor="@color/opv2"
                    app:circleRadius="15dp"
                    app:fillerRadius="12dp"
                    app:fillerColor="@color/opv1"
                    app:fieldBgColor="@color/whiteTextColor"
                    android:id="@+id/circleFiel3"/>




            <com.poovam.pinedittextfield.CirclePinField
                app:layout_constraintTop_toBottomOf="@id/circleFiel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                app:noOfFields="4"
                android:textSize="16sp"
                android:textSelectHandle="@drawable/text_handle"
                app:highlightColor="@color/opv2"
                app:circleRadius="15dp"
                app:fillerRadius="12dp"
                app:fillerColor="@color/opv1"
                app:fieldBgColor="@color/whiteTextColor"
                android:id="@+id/circleField4"/>




        </androidx.constraintlayout.widget.ConstraintLayout>







    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/opv1"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="phone"
                android:padding="5dp"

                android:text="Done"

                android:textColor="@color/whiteTextColor"
                android:textSize="20dp"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>