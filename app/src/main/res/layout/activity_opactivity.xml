<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Dashboard.OPActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingClass">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/google_1x"
            android:text="Order Trend"
            android:textStyle="bold"
            android:textColor="@color/blackTextColor"/>
       <androidx.cardview.widget.CardView
           android:layout_margin="@dimen/google_1x"
           app:cardBackgroundColor="@color/opv2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.github.mikephil.charting.charts.BarChart
               android:id="@+id/chart_main"
               android:layout_width="match_parent"
               android:layout_height="200dp" />
       </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vendor_BI_data"
            android:layout_width="match_parent"
           android:layout_margin="5dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/main_screen_menu"




        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        app:menu="@menu/navigation_menu"

        android:keyboardNavigationCluster="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/footer_navigation"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:orientation="vertical"
            >
            <View

                android:id="@+id/foot"
                app:layout_constraintTop_toTopOf="@id/footer_navigation"
                app:layout_constraintStart_toStartOf="@id/footer_navigation"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardview_dark_background"/>
            <androidx.constraintlayout.widget.ConstraintLayout

                app:layout_constraintTop_toTopOf="@id/footer_navigation"
                android:id="@+id/shutterop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              >
                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Store Shutter"
                    android:padding="5dp"
                    android:textColor="@color/blackTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:id="@+id/storedown"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/shutterop"
                app:layout_constraintStart_toStartOf="@id/footer_navigation"
                android:id="@+id/footer_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blackTextColor"
                android:padding="5dp"

                android:text="Terms and Condition" />
            <TextView
                app:layout_constraintTop_toBottomOf="@id/footer_item_1"
                android:id="@+id/footer_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blackTextColor"
                android:padding="5dp"
                android:text="Logout" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
