<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="5dp"
    android:layout_margin="1dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/google_1x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"



       >
        <TextView

            android:layout_margin="4dp"
            android:padding="@dimen/google_1x"
            android:id="@+id/categoryName_panel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Category 1"
            android:textColor="@color/opv1"
            android:textSize="18dp"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="@dimen/google_1x"
            android:layout_margin="4dp"
            android:id="@+id/Loadmore_panel"
            app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
            android:text="Load More>>"
            android:textStyle="bold"
            android:textColor="@color/opv2"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@id/categoryName_panel"
            android:id="@+id/subitem"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>