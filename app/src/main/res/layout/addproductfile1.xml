<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"



    >



    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/maincontainer23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ItemCe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/closeddialog"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="8dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/cross"/>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:background="@color/blackTextColor"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivFish_Dialog"
                                    android:layout_width="wrap_content"
                                    android:layout_height="200dp"
                                    android:src="@drawable/profile"

                                    android:layout_gravity="center"
                                    />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView

                            android:padding="2dp"
                            android:id="@+id/ppname_dialog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item Name"
                            android:textColor="@color/opv2"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            />
                        <TextView

                            android:padding="4dp"

                            android:id="@+id/ppdesc_dialog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="@string/exampledata"
                            android:textColor="#013747"
                            android:textSize="12dp"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="2dp"
                                android:id="@+id/ppric_Dialog"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:text="100"
                                android:textColor="#013747"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                            <TextView


                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:text=" PKR"
                                android:textColor="#013747"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>



                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/colorblock_dialog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView

                                android:id="@+id/choosecolor_dialog"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:padding="4dp"
                                android:text="Choose Color"
                                android:textColor="#013747"
                                android:textSize="15dp"
                                />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/choosecolor_dialoglist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/colorpallete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                        <TextView

                            android:id="@+id/cquan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:padding="4dp"
                            android:text="Choose Quantity"
                            android:textColor="#013747"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:orientation="horizontal">
                            <NumberPicker

                                android:orientation="horizontal"
                                android:id="@+id/numberpicker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                            <LinearLayout
                                android:id="@+id/paymentsetting"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="25dp"
                                app:layout_constraintTop_toBottomOf="@id/maincontainer23"
                                >
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/stotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"


                                    app:layout_constraintTop_toBottomOf="@id/maincontainer23">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Subtotal"
                                        android:textColor="#000000"
                                        android:textSize="15dp"
                                        app:layout_constraintStart_toStartOf="@id/stotal"
                                        app:layout_constraintTop_toTopOf="@id/stotal"
                                        />

                                    <TextView

                                        android:id="@+id/subtotal_dialog"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rs :100"

                                        android:textColor="@color/opv2"
                                        android:textSize="15dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="@id/stotal"
                                        app:layout_constraintTop_toTopOf="@id/stotal" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout

                                    android:visibility="gone"
                                    android:id="@+id/dtotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintTop_toBottomOf="@id/stotal">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Delivery Charges"
                                        android:textColor="#000000"
                                        android:textSize="15dp"
                                        app:layout_constraintStart_toStartOf="@id/dtotal"
                                        app:layout_constraintTop_toTopOf="@id/dtotal"
                                        />
                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rs :0"

                                        android:textColor="@color/opv2"
                                        app:layout_constraintEnd_toEndOf="@id/dtotal"
                                        app:layout_constraintTop_toTopOf="@id/dtotal"
                                        android:textSize="15dp"
                                        />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/ttotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintTop_toBottomOf="@id/dtotal">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Total"
                                        android:textColor="#000000"
                                        android:textSize="15dp"
                                        app:layout_constraintStart_toStartOf="@id/ttotal"
                                        app:layout_constraintTop_toTopOf="@id/ttotal"
                                        />
                                    <TextView
                                        android:id="@+id/total_dialog"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rs :100"

                                        android:textColor="@color/opv2"
                                        app:layout_constraintEnd_toEndOf="@id/ttotal"
                                        app:layout_constraintTop_toTopOf="@id/ttotal"
                                        android:textSize="15dp"
                                        />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_gravity="end"

                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="10dp"




                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView

                            android:id="@+id/atc_dialog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            app:cardCornerRadius="@dimen/google_1x">
                            <TextView

                                android:id="@+id/atc_extend"
                                android:layout_width="wrap_content"
                                android:layout_gravity="end"

                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:text="Add to Cart"

                                android:textColor="@color/whiteTextColor"
                                android:background="@color/opv1"
                                android:textSize="12dp"
                                />
                        </androidx.cardview.widget.CardView>




                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>