<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <LinearLayout
        app:layout_constraintTop_toTopOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        android:visibility="gone"
        android:id="@+id/heade"
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="22dp">
        <TextView
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Out of Stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/heade"
        android:id="@+id/upp_deck"
        android:background="#60BBC2C2"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:id="@+id/dele"
            android:layout_width="32dp"
            android:layout_height="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/dele_1"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/ele"
            android:layout_width="32dp"
            android:layout_height="22dp"
            app:layout_constraintEnd_toEndOf="@id/cont"
            app:layout_constraintBottom_toBottomOf="@id/cont"

            android:src="@drawable/eidtbtn"/>
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/cont"
            app:layout_constraintEnd_toEndOf="@id/cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/idcheck_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="66dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/ivFish_1"
                    android:layout_width="90dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/optimizedlogo" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:id="@+id/producttext"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/nameofitem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="@id/producttext"
                            app:layout_constraintTop_toTopOf="@id/producttext"
                            android:text="Item Name"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:textColor="@color/opv2"
                            />



                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:id="@+id/priceandquantity"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/priceofitem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: 150 PKR"
                            android:maxLines="2"
                            android:textColor="@color/opv1"
                            android:textSize="12dp"
                            app:layout_constraintTop_toTopOf="@id/priceandquantity"
                            app:layout_constraintStart_toStartOf="@id/priceandquantity"
                            />
                        <TextView
                            android:layout_marginLeft="24dp"
                            android:id="@+id/quantityofitem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: 150 PKR"
                            android:maxLines="2"
                            android:textColor="@color/opv1"
                            app:layout_constraintTop_toTopOf="@id/priceandquantity"

                            app:layout_constraintStart_toEndOf="@id/priceofitem"

                            android:textSize="12dp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/ordertotalprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: 150 PKR"
                        android:maxLines="2"
                        android:textColor="@color/opv1"
                        android:textSize="12dp"
                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/threeitem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginRight="45dp"


                            app:layout_constraintEnd_toEndOf="@id/threeitem"
                            app:layout_constraintTop_toTopOf="@id/threeitem"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="20dp"

            android:id="@+id/lower_deck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cont"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

//

</androidx.cardview.widget.CardView>