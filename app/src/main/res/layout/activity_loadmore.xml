<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"

android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".Activity.Home.ProductScreen.DisplayProduct.Home.Fragment.ProductBy.Category.loadmoreActivity">
<RelativeLayout
    android:id="@+id/UpperBar"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="horizontal"

    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/backbutton1_loadmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"

        />


    <TextView
        android:id="@+id/vendor_prov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"



        android:layout_toRightOf="@id/backbutton1_loadmore"
        android:text="@string/app_name"
        android:textColor="@color/opv1"
        android:textSize="18dp" />


</RelativeLayout>


<androidx.recyclerview.widget.RecyclerView

    android:id="@+id/loadmore_products"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toBottomOf="@id/UpperBar"
    app:layout_constraintStart_toStartOf="parent"/>

</LinearLayout>