<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bii_board"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:background="@drawable/my_edit_bg"
            >
            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/toolset"
                app:layout_constraintBottom_toBottomOf="@id/toolset"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                android:layout_height="wrap_content"
                />

            <TextView

                android:layout_margin="32dp"
                android:textColor="@color/opv1"
                android:id="@+id/store_name"
                android:textSize="17dp"
                android:lines="1"
                app:layout_constraintTop_toTopOf="@id/bii_board"
                app:layout_constraintStart_toStartOf="@id/bii_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView

                android:id="@+id/store_address"
                android:textSize="10dp"
                android:textColor="@color/opv1"
                app:layout_constraintStart_toStartOf="@id/store_name"
                app:layout_constraintTop_toBottomOf="@id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo_vendor"
                android:layout_width="100dp"
                android:padding="12dp"
                android:layout_height="100dp"

                app:layout_constraintTop_toTopOf="@id/bii_board"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/banner"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/data_mal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bii_board"/>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
 app:layout_constraintTop_toBottomOf="@id/data_mal"
        android:layout_height="wrap_content"
>

    </FrameLayout>
</LinearLayout>