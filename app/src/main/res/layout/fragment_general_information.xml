<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_store"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment.StoreFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/parent_container"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="@color/opv2"
            android:text="Store Details"
            />
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/header"
            android:id="@+id/sub_container"

            app:layout_constraintStart_toStartOf="@id/parent_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="10dp"

                    android:textStyle="bold"
                    android:text="Serial ID"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/store_name"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:padding="10dp"

                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="10dp"

                    android:textStyle="bold"
                    android:text="SKU"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/store_abbr"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:padding="10dp"

                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="10dp"

                    android:textStyle="bold"
                    android:text="Account ID"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/store_desc"

                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:padding="10dp"

                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>





        </LinearLayout>

        <LinearLayout

            app:layout_constraintTop_toBottomOf="@id/sub_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/opv1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:onClick="click_next"
                    android:id="@+id/next_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textColor="#ffff"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Next"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- TODO: Update blank fragment layout -->


    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>