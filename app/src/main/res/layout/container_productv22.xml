<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainsae"
    android:background="@color/whiteTextColor"
    android:orientation="vertical"
    android:layout_margin="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bii_board"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:background="@drawable/my_edit_bg"
            >


            <TextView

                android:text="Store Name"
                android:layout_margin="32dp"
                android:textColor="@color/opv1"
                android:id="@+id/getstorename"
                android:textSize="17dp"
                android:lines="1"
                app:layout_constraintTop_toTopOf="@id/bii_board"
                app:layout_constraintStart_toStartOf="@id/bii_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Store Deal in"
                android:id="@+id/getstorespeciality"
                android:textSize="10dp"
                android:textColor="@color/opv1"

                app:layout_constraintTop_toBottomOf="@id/getstorename"
                app:layout_constraintStart_toStartOf="@id/getstorename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivFish_vendorprime"
                android:layout_width="100dp"
                android:padding="12dp"
                android:layout_height="100dp"

                app:layout_constraintTop_toTopOf="@id/bii_board"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/banner"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</LinearLayout>