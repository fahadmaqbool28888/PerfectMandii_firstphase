<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlashSaleActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolset"
            android:background="@color/opv2"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="52dp"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/toolset"
                app:layout_constraintBottom_toBottomOf="@id/toolset"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                android:layout_height="wrap_content"
                />
            <TextView

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Recently Added"
                android:textSize="24dp"

                android:textColor="@color/opv1"
                app:layout_constraintLeft_toRightOf="@id/backbutton"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/flashsale_more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>