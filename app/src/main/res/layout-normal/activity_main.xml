<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    tools:ignore="HardcodedText">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<include layout="@layout/toolbar"/>
        <ImageView
            android:id="@+id/main_banner_mainscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_Container_mainscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/main_screen_menu"




        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu"

        android:keyboardNavigationCluster="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/footer_navigation"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:orientation="vertical"
            >
            <View

                app:layout_constraintTop_toTopOf="@id/footer_navigation"
                app:layout_constraintStart_toStartOf="@id/footer_navigation"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardview_dark_background"/>
            <TextView
                app:layout_constraintTop_toTopOf="@id/footer_navigation"
                app:layout_constraintStart_toStartOf="@id/footer_navigation"
                android:id="@+id/footer_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blackTextColor"
                android:padding="5dp"

                android:text="Terms and Condition" />
            <TextView
                app:layout_constraintTop_toBottomOf="@id/footer_item_1"
                android:id="@+id/footer_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blackTextColor"
                android:padding="5dp"
                android:text="Logout" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
