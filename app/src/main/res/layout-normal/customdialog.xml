<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:minHeight="180dp"
    android:minWidth="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainc">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:id="@+id/mainhead"
    android:layout_height="180dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/opv2"
        android:textColor="@color/whiteTextColor"
        android:text="Delete"
        android:paddingLeft="6dp"
        android:textSize="15dp"
        android:padding="5dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="@id/mainhead"


        android:id="@+id/sub_main"
        app:layout_constraintStart_toStartOf="@id/mainhead"
        app:layout_constraintEnd_toEndOf="@id/mainhead">
        <TextView
            android:id="@+id/qm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/question_mark_delete"
            android:textColor="@color/blackTextColor"
            android:textSize="14dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/rightflag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Yes"
            android:padding="10dp"
            android:background="@color/opv1"

            android:textColor="@color/whiteTextColor"
            android:textSize="10dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/leftflag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="@id/sub_main"
          app:layout_constraintLeft_toRightOf="@id/leftflag"
            app:layout_constraintEnd_toEndOf="@id/sub_main"
            android:text="No"
            android:padding="10dp"
            android:layout_marginRight="35dp"
            android:background="@color/opv1"

            android:textColor="@color/whiteTextColor"
            android:textSize="10dp"
            android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>