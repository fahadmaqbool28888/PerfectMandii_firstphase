<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/google_1x"

  >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/idcheck"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="5dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/ivFish"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:src="@drawable/optimizedlogo" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <TextView
                    android:id="@+id/nameofitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exampledata"
                    android:maxLines="1"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/priceofitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: 150 PKR"
                    android:maxLines="2"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/threeitem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"





                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginRight="45dp"


                        app:layout_constraintEnd_toEndOf="@id/threeitem"
                        app:layout_constraintTop_toTopOf="@id/threeitem"
                        >
                        <ImageView
                            android:id="@+id/cart_plus_img"
                            android:layout_width="19dp"
                            android:layout_height="19dp"


                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/pl"/>



                            <TextView
                                android:id="@+id/cart_product_quantity_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"

                                android:layout_gravity="center_vertical"
                                android:textColor="@color/opv2"
                                android:textSize="19dp"/>


                        <ImageView
                            android:id="@+id/cart_minus_img"
                            android:layout_width="19dp"
                            android:layout_height="19dp"


                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/nl"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>