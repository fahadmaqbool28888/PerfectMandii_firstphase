<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainc">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/optimizedlogo"/>


        </LinearLayout>

        <TextView
            android:id="@+id/taskname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textSize="15dp"

            android:textColor="@color/opv1"
            />
        <EditText
            android:id="@+id/inputusername"
            android:layout_width="300dp"
            android:hint="First Name / Last Name"
            android:layout_height="wrap_content"/>
        <TextView

            android:id="@+id/taskdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"

            android:textSize="15dp"

            android:textColor="@color/opv1"
            />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/inputusernumber"
                android:layout_width="180dp"
                android:hint="03*********"
                android:maxLength="11"
                android:inputType="phone"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/getotp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Click for OTP"
                android:background="@color/opv2"
                android:textColor="@color/opv1"
                android:textSize="16dp"
                android:padding="5dp"

                />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/systempin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System pin"
            android:textSize="15dp"

            android:textColor="@color/opv1"
            />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et01"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:hint="0"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et02"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:gravity="center"
                android:hint="0"
                android:inputType="numberPassword"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et03"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:hint="0"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et04"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:inputType="numberPassword"
                android:gravity="center"
                android:hint="0"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/userpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggested pin"
            android:textSize="15dp"

            android:textColor="@color/opv1"
            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et11"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:hint="0"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et12"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:gravity="center"
                android:hint="0"
                android:inputType="numberPassword"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et13"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:hint="0"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et14"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:inputType="numberPassword"
                android:gravity="center"
                android:hint="0"
                android:layout_height="wrap_content"/>
            </LinearLayout>
        <TextView
            android:id="@+id/usercpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmation pin"
            android:textSize="15dp"

            android:textColor="@color/opv1"
            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et21"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:hint="0"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et22"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:hint="0"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et23"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:hint="0"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et24"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:inputType="numberPassword"
                android:gravity="center"
                android:hint="0"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/taskadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="5dp"
            android:layout_marginTop="35dp"
            android:background="@color/opv2"
            android:textColor="@color/opv1"
            android:text="Sign up" />


    </LinearLayout>


</androidx.cardview.widget.CardView>