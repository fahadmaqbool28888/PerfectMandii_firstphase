<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.customer.perfectcustomer">

    <dist:module dist:instant="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher_update"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.customer.perfectcustomer.Activity.Home.VendorStore.VendorStoreActivity"
            android:exported="false" />
        <activity
            android:name="com.customer.perfectcustomer.Activity.CustomerOrder.IndexViewActivity"
            android:exported="false" />

        <activity
            android:name=".Activity.Home.Order.fetch.OrderLogActivity"
            android:exported="false" />

        <activity
            android:name="com.customer.perfectcustomer.Activity.MainVendorStoreActivity"
            android:exported="true" />
        <activity
            android:name="com.customer.perfectcustomer.Activity.CustomerOrder.OrderDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.customer.perfectcustomer.Activity.Home.ProductScreen.ViewImageActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Home.ProductScreen.DisplayProduct.Home.RecentlyAddedActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Home.ProductScreen.DisplayProduct.Home.FlashSaleActivity"
            android:exported="false" />
        <activity
            android:name="com.customer.perfectcustomer.Activity.FreightForwarder.FreightForwarderActivity"
            android:exported="true" />
        <activity
            android:name="com.customer.perfectcustomer.MainActivity_OP"
            android:exported="true" />


        <activity
            android:name="com.customer.perfectcustomer.Activity.Authentication.ProfileInformationActivity"
            android:exported="false" />
        <activity android:name=".Activity.Home.ProductScreen.DisplayProduct.Home.Fragment.ProductBy.Category.loadmoreActivity" />
        <activity android:name="com.customer.perfectcustomer.Activity.Product_Profile_extend" />

        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />

        <activity android:name="com.customer.perfectcustomer.Activity.Authentication.UpdateProfileActivity" />
        <activity android:name=".Activity.Home.Order.InvoiceView" />
        <activity android:name=".Activity.Home.Order.fetch.UserOrderActivity" />
        <activity android:name="com.customer.perfectcustomer.Activity.User.customerprofile.CustomerDashboard" />
        <activity android:name=".Activity.Home.Order.PaymentDepositActivity" />

        <activity android:name=".Activity.Home.Order.Place.OrderViewActivity" />
        <activity android:name="com.customer.perfectcustomer.Activity.PasswordChange.EnterYourNewPasswordActivity" />
        <activity android:name="com.customer.perfectcustomer.Activity.PasswordChange.confirmPassword" />

        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />

        <activity android:name="com.customer.perfectcustomer.Activity.PasswordChange.ForgetPassword" />
        <activity
            android:name="com.customer.perfectcustomer.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.intent.action.TEST_LOOP" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/javascript" />
            </intent-filter>
        </activity>
        <activity android:name="com.customer.perfectcustomer.Activity.Authentication.LoginActivity" />
        <activity android:name="com.customer.perfectcustomer.Activity.Home.ProductScreen.DisplayProduct.CategoryByVendorActivity" />
        <activity
            android:name="com.customer.perfectcustomer.Activity.Home.ProductScreen.DisplayProduct.ProductProfileActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Activity.Home.ProductScreen.DisplayProduct.Home.Fragment.ProductBy.DashboardActivity" />
    </application>

</manifest>